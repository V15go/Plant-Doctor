<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlantDoctor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_1</item>
        <item name="colorPrimaryVariant">@color/red_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_2</item>
        <item name="colorSecondaryVariant">@color/orange_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="background">@drawable/white_background</item>
        <item name="android:windowBackground">@drawable/white_background</item>
        <!-- Customize your theme here. -->
    </style>
</resources>